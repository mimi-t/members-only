extends layout

block content
  h1= title
  form(method='POST' action='')
    .form-group    
        label(for='passcode') Enter the secret passcode
        input#password.form-control(type='passcode' name='passcode' required='true')
    button.btn.btn-primary(type='submit') Join

    if errors
        ul
        for error in errors
            li!= error.msg